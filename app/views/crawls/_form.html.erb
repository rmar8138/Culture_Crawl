<%= form_with model: crawl, local: true do |form| %>
  <% if crawl.errors.any? %>
    <div>
      <h2>
        <%= pluralize(crawl.errors.count, "error") %>
      </h2>
      <ul>
        <% crawl.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h2>General Info</h2>
  <div>
    <%= form.label :crawl_image %>
    <%= form.file_field :crawl_image, accept: "image/png,image/gif,image/jpeg,image/jpg" %>
  </div>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <h2>Itinerary</h2>
  <div id="itinerary">
    <%= form.fields_for :locations do |location| %>
      <%= render 'location_fields', form: location %>
    <% end %>
      <div class="links">
        <%= link_to_add_association "Add new location", form, :locations, form_name: 'form' %>
      </div>
  </div>
  <h2>Availability</h2>
  <div>
    <%= form.label :crawl_date %>
    <%= select_datetime() %>
  </div>
  <div>
    <%= form.label :max_attendees %>
    <%= form.number_field :max_attendees %>
  </div>
  <h2>Pricing</h2>
  <div>
    <%= form.label :price %>
    <%= form.number_field :price, step: :any, value: (crawl.price / 100).to_f %>
  </div>
  <%= form.submit class: "button" %>
<% end %>

